<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <g:HTMLPanel>
    <g:VerticalPanel spacing="8">
      <g:HorizontalPanel spacing="8">
        <g:Label text="Prix original (€) :" />
        <g:TextBox ui:field="originalPrice" />
      </g:HorizontalPanel>
      
      <g:HorizontalPanel spacing="8">
        <g:Label text="Taux (%) :" />
        <g:TextBox ui:field="discountRate" />
      </g:HorizontalPanel>
      
      <g:HorizontalPanel spacing="8">
        <g:SubmitButton ui:field="calculateButton" text="Calculer" />
        <g:ResetButton ui:field="clearButton" text="Effacer" />
      </g:HorizontalPanel>
      
      <g:Label ui:field="errorLabel" />

      <g:VerticalPanel spacing="8">
        <g:Label text="Retrouver le prix initial" />
        <g:HorizontalPanel spacing="8">
          <g:Label text="Prix final € :" />
          <g:TextBox ui:field="finalPrice" />
        </g:HorizontalPanel>
        <g:HorizontalPanel spacing="8">
          <g:Label text="Taux (%) :" />
          <g:TextBox ui:field="reverseDiscountRate" />
        </g:HorizontalPanel>
        <g:HorizontalPanel spacing="8">
          <g:SubmitButton ui:field="calculateOriginalButton" text="Calculer prix initial" />
          <g:ResetButton ui:field="clearOriginalButton" text="Effacer" />
        </g:HorizontalPanel>
        <g:Label ui:field="errorLabelOriginal" />
      </g:VerticalPanel>

      <g:VerticalPanel spacing="8">
        <g:Label text="Division de deux nombres entiers" />

        <g:HorizontalPanel spacing="8">
          <g:Label text="A :" />
          <g:TextBox ui:field="divA" width="60px" />
          <g:Label text="B :" />
          <g:TextBox ui:field="divB" width="60px" />
          <g:SubmitButton ui:field="divideButton" text="Diviser" />
          <g:ResetButton ui:field="clearDivisionButton" text="Effacer" />
        </g:HorizontalPanel>

        <g:Label ui:field="divisionResult" />
        
      </g:VerticalPanel>
    </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder>
